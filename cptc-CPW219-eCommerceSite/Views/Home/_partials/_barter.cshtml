    <!-- What I Accept Section with Cards -->
    <div class="card mb-4 body-section">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0 fw-bold">What I Accept</h5>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6 col-lg-3 mb-3">
                    <div class="card h-100 border-success">
                        <div class="card-body text-center">
                            <div class="mb-3">
                                <i class="fa-solid fa-paintbrush fa-2x text-success"></i>
                            </div>
                            <h6 class="card-title">Professional Skills</h6>
                            <p class="card-text small">Design, writing, marketing, content creation, and other professional services</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-lg-3 mb-3">
                    <div class="card h-100 border-success">
                        <div class="card-body text-center">
                            <div class="mb-3">
                                <i class="fa-solid fa-laptop-code fa-2x text-success"></i>
                            </div>
                            <h6 class="card-title">Technical Equipment</h6>
                            <p class="card-text small">Hardware, peripherals, and tech gadgets that support development work</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-lg-3 mb-3">
                    <div class="card h-100 border-success">
                        <div class="card-body text-center">
                            <div class="mb-3">
                                <i class="fa-solid fa-code fa-2x text-success"></i>
                            </div>
                            <h6 class="card-title">Software Licenses</h6>
                            <p class="card-text small">Premium tools, development software, or SaaS subscriptions</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-lg-3 mb-3">
                    <div class="card h-100 border-success">
                        <div class="card-body text-center">
                            <div class="mb-3">
                                <i class="fa-solid fa-graduation-cap fa-2x text-success"></i>
                            </div>
                            <h6 class="card-title">Educational Resources</h6>
                            <p class="card-text small">Courses, books, training materials, or mentorship opportunities</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Barter Process Section with Timeline -->
    <h5 class="ff-consolas mb-3 text-center">Barter Process</h5>
    <div class="position-relative mb-4">
        <!-- Timeline Line -->
        <div class="position-absolute top-0 bottom-0 start-50 translate-middle-x" style="width: 2px; background-color: var(--bs-success); z-index: 0;"></div>

        <!-- Timeline Steps -->
        <div class="row g-0 mb-4">
            <!-- Step 1 -->
            <div class="col-md-6 position-relative mb-4 mb-md-0">
                <div class="card body-section me-md-4">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-success text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                <span class="fw-bold">1</span>
                            </div>
                            <h5 class="card-title mb-0 fw-semibold">Initial Proposal</h5>
                        </div>
                        <p class="card-text">Contact me with details about your web development needs and what you're offering in exchange.</p>
                        <div class="d-flex justify-content-end">
                            <i class="fa-solid fa-envelope-open-text text-muted"></i>
                        </div>
                    </div>
                </div>
                <!-- Arrow Connector for Desktop -->
                <div class="position-absolute top-50 end-0 translate-middle-y d-none d-md-block">
                    <div class="bg-success" style="width: 20px; height: 2px;"></div>
                </div>
            </div>

            <!-- Step 2 -->
            <div class="col-md-6 position-relative mb-4 mb-md-0">
                <div class="card body-section ms-md-4">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-success text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                <span class="fw-bold">2</span>
                            </div>
                            <h5 class="card-title mb-0 fw-semibold">Value Assessment</h5>
                        </div>
                        <p class="card-text">We'll discuss the fair market value of both my services and your offered goods/services to ensure an equitable exchange.</p>
                        <div class="d-flex justify-content-end">
                            <i class="fa-solid fa-scale-balanced text-muted"></i>
                        </div>
                    </div>
                </div>
                <!-- Arrow Connector for Desktop -->
                <div class="position-absolute top-50 start-0 translate-middle-y d-none d-md-block">
                    <div class="bg-success" style="width: 20px; height: 2px;"></div>
                </div>
            </div>
        </div>

        <div class="row g-0">
            <!-- Step 3 -->
            <div class="col-md-6 position-relative mb-4 mb-md-0">
                <div class="card body-section me-md-4">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-success text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                <span class="fw-bold">3</span>
                            </div>
                            <h5 class="card-title mb-0 fw-semibold">Agreement Terms</h5>
                        </div>
                        <p class="card-text">Once we agree on the exchange value, we'll create a simple written agreement outlining deliverables from both sides.</p>
                        <div class="d-flex justify-content-end">
                            <i class="fa-solid fa-file-signature text-muted"></i>
                        </div>
                    </div>
                </div>
                <!-- Arrow Connector for Desktop -->
                <div class="position-absolute top-50 end-0 translate-middle-y d-none d-md-block">
                    <div class="bg-success" style="width: 20px; height: 2px;"></div>
                </div>
            </div>

            <!-- Step 4 -->
            <div class="col-md-6 position-relative">
                <div class="card body-section ms-md-4">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-success text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                <span class="fw-bold">4</span>
                            </div>
                            <h5 class="card-title mb-0 fw-semibold">Exchange Timeline</h5>
                        </div>
                        <p class="card-text">We'll establish milestones for both parties to deliver their part of the agreement, ensuring a fair and transparent process.</p>
                        <div class="d-flex justify-content-end">
                            <i class="fa-solid fa-calendar-check text-muted"></i>
                        </div>
                    </div>
                </div>
                <!-- Arrow Connector for Desktop -->
                <div class="position-absolute top-50 start-0 translate-middle-y d-none d-md-block">
                    <div class="bg-success" style="width: 20px; height: 2px;"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Benefits of Bartering -->
    <div class="card body-section mt-4">
        <div class="card-header bg-light">
            <h5 class="mb-0 fw-bold">Why Consider Bartering?</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex">
                            <span class="badge bg-success rounded-pill me-3 mt-1">1</span>
                            <div>
                                <strong>Cash-Free Exchange</strong>
                                <p class="small mb-0">Save financial resources while still getting the web services you need.</p>
                            </div>
                        </li>
                        <li class="list-group-item d-flex">
                            <span class="badge bg-success rounded-pill me-3 mt-1">2</span>
                            <div>
                                <strong>Build Relationships</strong>
                                <p class="small mb-0">Create stronger business connections through mutual value exchange.</p>
                            </div>
                        </li>
                    </ul>
                </div>
                <div class="col-md-6">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex">
                            <span class="badge bg-success rounded-pill me-3 mt-1">3</span>
                            <div>
                                <strong>Utilize Excess Capacity</strong>
                                <p class="small mb-0">Put underutilized resources or skills to productive use.</p>
                            </div>
                        </li>
                        <li class="list-group-item d-flex">
                            <span class="badge bg-success rounded-pill me-3 mt-1">4</span>
                            <div>
                                <strong>Creative Solutions</strong>
                                <p class="small mb-0">Find innovative ways to meet business needs outside traditional transactions.</p>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Call to Action -->
    <div class="alert alert-success mt-4 d-flex flex-column flex-md-row align-items-center justify-content-between">
        <div class="mb-3 mb-md-0">
            <h5 class="fw-bold ff-consolas mb-2">Ready to explore a barter exchange?</h5>
            <p class="mb-0">Let's discuss how we can create value together without traditional currency.</p>
        </div>
        <div>
            <button class="btn btn-outline-success btn-lg">
                <i class="fa-solid fa-handshake me-2"></i>Start a Conversation
            </button>
        </div>
    </div>

    <!-- Disclaimer -->
    <div class="mt-3 text-center small text-muted fst-italic">
        Please note: I reserve the right to decline barter offers that don't match my current needs or value expectations.
    </div>
</div>
