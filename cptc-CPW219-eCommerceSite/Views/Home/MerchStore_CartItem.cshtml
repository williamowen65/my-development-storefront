@{
}



<tr class="cart-item" data-product-id="@Model.ProductId">
    <td>@Model.Name</td>
    <td style="width:50%">@Model.Description</td>
    <td>@Html.DisplayFor(m => m.Price)</td>
    <td style="width: 100%; text-align: center">
        <img src="@Model.ImagePath" height="100px;" />
    </td>
    <td class="quantity">
        @Html.DisplayFor(model => model.Quantity)
    </td>
    <td style="white-space: nowrap;">
        <button class="btn btn-danger btn-sm" onclick="deleteCartItem(event, @Model.ProductId)">
            Delete
        </button>
    </td>
</tr>