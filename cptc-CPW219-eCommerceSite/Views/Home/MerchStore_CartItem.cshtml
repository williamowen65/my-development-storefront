@{
}



<tr data-product-id="@Model.ProductId">
    <td>@Model.Name</td>
    <td style="width:50%">@Model.Description</td>
    <td>@Html.DisplayFor(m => m.Price)</td>
    <td style="width: 100%; text-align: center">
        <img src="@Model.ImagePath" height="100px;" />
    </td>
    <td>
        @Html.DisplayFor(model => model.Quantity)
    </td>
    <td style="white-space: nowrap;">
        <button class="btn btn-sm btn-secondary"
                onclick="replaceContentWithPartialView('merch-editor/edit/'+ @Model.ProductId.ToString(), 'edit', () => window.initEditForm())">
            Edit
        </button> |
        <button class="btn btn-danger btn-sm"
                onclick="removeMerchItem(@Model.ProductId.ToString())">
            Delete
        </button>
    </td>
</tr>