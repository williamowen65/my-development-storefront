@model HomePageViewModel

@{
    ViewData["Title"] = "MerchEditor";
}

<div class="mt-5 container card body-section bg-body">

    <h1>Merch Editor</h1>

    <p>
        <button onclick="replaceContentWithPartialView('/Home/CreateNewMerchProductDialog', 'create', () => window.initCreateForm())">Create New</button>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ProductsVM[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductsVM[0].Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductsVM[0].Price)
                </th>
           
                <th>
                    @Html.DisplayNameFor(model => model.ProductsVM[0].ImageFile)
                </th>
                <th>
                    <!--Column for the controls-->
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ProductsVM)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
              
                    <td>
                        @Html.DisplayFor(modelItem => item.ImageFile)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ProductId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ProductId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ProductId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>


</div>

<div id="create">
    <!-- Partial View Modal gets added here -->
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}
