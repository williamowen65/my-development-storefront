@{
    ViewData["Title"] = "About My Development Storefront";
}

<style>
    .icon-box{
        width: 50px;
        height: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
    }
</style>

<div class="about-container py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card shadow-lg border-0 rounded-lg">
                    <div class="card-header bg-primary text-white text-center py-4">
                        <h1 class="display-5 fw-bold mb-0">About My Development Storefront</h1>
                    </div>
                    <div class="card-body p-5">
                        <div class="mb-5 text-center">
                            <div class="about-icon mb-3">
                                <i class="fa fa-code fa-3x" style="color:green"></i>
                            </div>
                            <h2 class="fw-bold text-primary">Welcome to My Development Journey</h2>
                            <p class="lead">
                                My Development Storefront is your one-stop shop for custom web development solutions tailored to your specific needs.
                            </p>
                            <hr class="my-4">
                        </div>

                        <div class="about-section mb-5">
                            <div class="d-flex align-items-center mb-3">
                                <div class="icon-box bg-light rounded-circle p-3 me-3">
                                    <i class="fa fa-user text-primary"></i>
                                </div>
                                <h3 class="fw-bold mb-0">Who I Am</h3>
                            </div>
                            <p class="ms-5">
                                I'm a passionate web developer dedicated to creating high-quality, user-friendly websites and applications. 
                                With expertise in various technologies including ASP.NET MVC, HTML, CSS, JavaScript, and more, 
                                I bring creativity and technical skill to every project I undertake.
                            </p>
                        </div>

                        <div class="about-section mb-5">
                            <div class="d-flex align-items-center mb-3">
                                <div class="icon-box bg-light rounded-circle p-3 me-3">
                                    <i class="fa fa-briefcase text-primary"></i>
                                </div>
                                <h3 class="fw-bold mb-0">What I Do</h3>
                            </div>
                            <p class="ms-5">
                                I specialize in:
                            </p>
                            <ul class="list-group list-group-flush ms-5 mb-3">
                                <li class="list-group-item bg-transparent"><i class="fa fa-check-circle text-success me-2"></i>Custom website development</li>
                                <li class="list-group-item bg-transparent"><i class="fa fa-check-circle text-success me-2"></i>E-commerce solutions</li>
                                <li class="list-group-item bg-transparent"><i class="fa fa-check-circle text-success me-2"></i>Responsive web design</li>
                                <li class="list-group-item bg-transparent"><i class="fa fa-check-circle text-success me-2"></i>Web application development</li>
                                <li class="list-group-item bg-transparent"><i class="fa fa-check-circle text-success me-2"></i>Website maintenance and updates</li>
                            </ul>
                        </div>

                        <div class="about-section mb-5">
                            <div class="d-flex align-items-center mb-3">
                                <div class="icon-box bg-light rounded-circle p-3 me-3">
                                    <i class="fa fa-rocket text-primary"></i>
                                </div>
                                <h3 class="fw-bold mb-0">My Approach</h3>
                            </div>
                            <p class="ms-5">
                                I believe in a client-centered approach to development. This means:
                            </p>
                            <ul class="list-group list-group-flush ms-5 mb-3">
                                <li class="list-group-item bg-transparent"><i class="fa fa-check-circle text-success me-2"></i>Understanding your unique requirements</li>
                                <li class="list-group-item bg-transparent"><i class="fa fa-check-circle text-success me-2"></i>Regular communication throughout the development process</li>
                                <li class="list-group-item bg-transparent"><i class="fa fa-check-circle text-success me-2"></i>Delivering solutions that exceed expectations</li>
                                <li class="list-group-item bg-transparent"><i class="fa fa-check-circle text-success me-2"></i>Ongoing support after project completion</li>
                            </ul>
                        </div>

                        <div class="about-section mb-5">
                            <div class="d-flex align-items-center mb-3">
                                <div class="icon-box bg-light rounded-circle p-3 me-3">
                                    <i class="fa fa-gears text-primary"></i>
                                </div>
                                <h3 class="fw-bold mb-0">Technologies I Use</h3>
                            </div>
                            <div class="ms-5">
                                <div class="row text-center">
                                    <div class="col-md-3 col-sm-6 mb-4">
                                        <div class="p-3 border rounded shadow-sm h-100">
                                            <i class="fa fa-code fa-2x mb-2 text-primary"></i>
                                            <h5>Front-end</h5>
                                            <p class="small">HTML5, CSS3, JavaScript, Bootstrap</p>
                                        </div>
                                    </div>
                                    <div class="col-md-3 col-sm-6 mb-4">
                                        <div class="p-3 border rounded shadow-sm h-100">
                                            <i class="fa fa-database fa-2x mb-2 text-primary"></i>
                                            <h5>Back-end</h5>
                                            <p class="small">ASP.NET, C#, SQL Server</p>
                                        </div>
                                    </div>
                                    <div class="col-md-3 col-sm-6 mb-4">
                                        <div class="p-3 border rounded shadow-sm h-100">
                                            <i class="fa fa-shopping-cart fa-2x mb-2 text-primary"></i>
                                            <h5>E-commerce</h5>
                                            <p class="small">Custom solutions, Payment integration</p>
                                        </div>
                                    </div>
                                    <div class="col-md-3 col-sm-6 mb-4">
                                        <div class="p-3 border rounded shadow-sm h-100">
                                            <i class="fa fa-cloud fa-2x mb-2 text-primary"></i>
                                            <h5>Deployment</h5>
                                            <p class="small">Azure, AWS, GitHub</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="about-section">
                            <div class="d-flex align-items-center mb-3">
                                <div class="icon-box bg-light rounded-circle p-3 me-3">
                                    <i class="fa fa-envelope text-primary"></i>
                                </div>
                                <h3 class="fw-bold mb-0">Get In Touch</h3>
                            </div>
                            <p class="ms-5">
                                Ready to start a project or have questions? Feel free to reach out through the contact forms on this site.
                                I'm always excited to discuss new opportunities and how I can help bring your ideas to life.
                            </p>
                            <div class="text-center mt-4">
                                <button class="btn btn-primary btn-lg" data-bs-toggle="modal" data-bs-target="#contactFormModal">Contact Me</button>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer py-3 text-center">
                        <p class="text-muted mb-0">Last updated: April 19, 2025</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add a simple fade-in animation to the about sections
            const sections = document.querySelectorAll('.about-section');
            sections.forEach((section, index) => {
                section.style.opacity = '0';
                section.style.transform = 'translateY(20px)';
                section.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
                
                setTimeout(() => {
                    section.style.opacity = '1';
                    section.style.transform = 'translateY(0)';
                }, 300 + (index * 150));
            });
        });
    </script>
}