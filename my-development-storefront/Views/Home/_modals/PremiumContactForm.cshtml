@model PremiumContact

<form id="premiumContactForm" class="modal-content" method="post" action="api/contact/create-premium">
    <div class="modal-header card-header bg-primary text-white rounded-top">
        <h5 class="modal-title fw-bold">Schedule a Consultation</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body p-4">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="form-group mb-3">
            <label asp-for="@Model.Name" class="form-label fw-semibold">Full Name</label>
            <input asp-for="@Model.Name" class="form-control form-control-lg rounded-3 border-secondary-subtle" placeholder="Your name" />
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="@Model.Email" class="form-label fw-semibold">Email Address</label>
            <input asp-for="@Model.Email" class="form-control form-control-lg rounded-3 border-secondary-subtle" placeholder="Your email address" />
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="@Model.CompanyName" class="form-label fw-semibold">Company Name</label>
            <input asp-for="@Model.CompanyName" class="form-control form-control-lg rounded-3 border-secondary-subtle" placeholder="Your company name" />
            <span asp-validation-for="@Model.CompanyName" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="@Model.PhoneNumber" class="form-label fw-semibold">Phone Number</label>
            <input asp-for="@Model.PhoneNumber" class="form-control form-control-lg rounded-3 border-secondary-subtle" placeholder="Your phone number" />
            <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="@Model.ConsultationType" class="form-label fw-semibold">Consultation Type</label>
            <select asp-for="@Model.ConsultationType" class="form-select form-control-lg rounded-3 border-secondary-subtle">
                <option value="">Select a consultation type</option>
                <option value="WebDevelopment">Web Development</option>
                <option value="MobileApp">Mobile App Development</option>
                <option value="ECommerce">E-commerce Solutions</option>
                <option value="SEO">SEO Optimization</option>
                <option value="UXDesign">UX/UI Design</option>
                <option value="Other">Other</option>
            </select>
            <span asp-validation-for="@Model.ConsultationType" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="@Model.Budget" class="form-label fw-semibold">Budget Range</label>
            <select asp-for="@Model.Budget" class="form-select form-control-lg rounded-3 border-secondary-subtle">
                <option value="">Select your budget range</option>
                <option value="Under5k">Under $5,000</option>
                <option value="5kTo10k">$5,000 - $10,000</option>
                <option value="10kTo25k">$10,000 - $25,000</option>
                <option value="25kTo50k">$25,000 - $50,000</option>
                <option value="50kPlus">$50,000+</option>
            </select>
            <span asp-validation-for="@Model.Budget" class="text-danger"></span>
        </div>
        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="@Model.PreferredDate" class="form-label fw-semibold">Preferred Date</label>
                <input asp-for="@Model.PreferredDate" type="date" class="form-control form-control-lg rounded-3 border-secondary-subtle" />
                <span asp-validation-for="@Model.PreferredDate" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="@Model.PreferredTime" class="form-label fw-semibold">Preferred Time</label>
                <input asp-for="@Model.PreferredTime" type="time" class="form-control form-control-lg rounded-3 border-secondary-subtle" />
                <span asp-validation-for="@Model.PreferredTime" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group mb-3">
            <div class="form-check">
                <input asp-for="@Model.IsUrgent" class="form-check-input" type="checkbox" />
                <label asp-for="@Model.IsUrgent" class="form-check-label">This is an urgent request</label>
            </div>
        </div>
        <div class="form-group mb-3">
            <label asp-for="@Model.Message" class="form-label fw-semibold">Project Details</label>
            <textarea asp-for="@Model.Message" class="form-control form-control-lg rounded-3 border-secondary-subtle" rows="5" placeholder="Tell us about your project and requirements"></textarea>
            <span asp-validation-for="@Model.Message" class="text-danger"></span>
        </div>
    </div>
    <div class="modal-footer">
        <div class="flex-grow-1">
            @Html.Partial("../_partials/_select2-forms.cshtml")
        </div>
        <button type="submit" class="btn btn-primary px-4 fw-bold">Schedule Consultation</button>
    </div>
</form>
