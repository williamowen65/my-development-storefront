@model HomePageViewModel


<div id="PremiumContactForm" class="modal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <form id="contactForm" class="modal-content" method="post">
            <div class="modal-header card-header bg-primary text-white rounded-top">
                <h5 class="modal-title fw-bold">Premium Contact Form</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="PremiumContact.Name" class="form-label fw-semibold"></label>
                    <input asp-for="PremiumContact.Name" class="form-control form-control-lg rounded-3 border-secondary-subtle" placeholder="Your name" />
                    <span asp-validation-for="PremiumContact.Name" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="PremiumContact.Email" class="form-label fw-semibold"></label>
                    <input asp-for="PremiumContact.Email" class="form-control form-control-lg rounded-3 border-secondary-subtle" placeholder="Your email address" />
                    <span asp-validation-for="PremiumContact.Email" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="PremiumContact.Message" class="form-label fw-semibold"></label>
                    <textarea asp-for="PremiumContact.Message" class="form-control form-control-lg rounded-3 border-secondary-subtle" rows="5" placeholder="How can I help you?"></textarea>
                    <span asp-validation-for="PremiumContact.Message" class="text-danger"></span>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary px-4" data-bs-dismiss="modal" tabindex="-1">Close</button>
                <button type="submit" class="btn btn-primary px-4 fw-bold">Send Message</button>
            </div>
        </form>
    </div>
</div>
<script>
    document.addEventListener("DOMContentLoaded", () => {
        const modal = document.getElementById('PremiumContactForm');
        modal.addEventListener('shown.bs.modal', () => {
            const nameInput = document.getElementById('PremiumContact_Name');
            if (nameInput) {
                nameInput.focus();
            }
        });
    });
</script>

<script>
    $(document).ready(function () {
        $('#contactForm').submit(function (event) {
            event.preventDefault(); // Prevent the default form submission

            // Create a formatted object from form data
            var formData = {
                Name: $('#PremiumContact_Name').val(),
                Email: $('#PremiumContact_Email').val(),
                Message: $('#PremiumContact_Message').val()
            };

            $.ajax({
                type: 'POST',
                url: '/api/contact/create',
                data: formData,
                success: function (response) {
                    // console.log({response})
                    // Handle success response

                      alert(response.message);
                    if(response.success){
                        $('#PremiumContactForm').modal('hide');
                        $('#PremiumContactForm form').get(0).reset();
                    } else {
                        // Apply response.errors to form
                        // response.errors.
                    }
                },
                error: function (error) {
                    // Handle error response
                    console.log({error})
                    alert('An error occurred. Please try again.');
                }
            });
        });
    });
</script>
