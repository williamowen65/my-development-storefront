@model GeneralContact

<form id="GeneralContactForm" class="modal-content" method="post" action="api/contact/create">
    <div class="modal-header card-header bg-primary text-white rounded-top">
        <div class="flex-grow-1">

        <h5 class="modal-title fw-bold">Contact Form</h5>
            


            @* <div class="d-flex"> *@
            @*     Other forms: <div  class="ms-3" open-sesame="createPremiumContactForm"> Premium Consultation Form</div></div> *@
         
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        
    </div>
    <div class="modal-body p-4">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="form-group mb-3">
            <label asp-for="@Model.Name" class="form-label fw-semibold"></label>
            <input asp-for="@Model.Name" class="form-control form-control-lg rounded-3 border-secondary-subtle" placeholder="Your name" />
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="@Model.Email" class="form-label fw-semibold"></label>
            <input asp-for="@Model.Email" class="form-control form-control-lg rounded-3 border-secondary-subtle" placeholder="Your email address" />
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="@Model.Message" class="form-label fw-semibold"></label>
            <textarea asp-for="@Model.Message" class="form-control form-control-lg rounded-3 border-secondary-subtle" rows="5" placeholder="How can I help you?"></textarea>
            <span asp-validation-for="@Model.Message" class="text-danger"></span>
        </div>
    </div>
    <div class="modal-footer">
        <div class="flex-grow-1">
        Other Forms: <br />
        @Html.Partial("../_partials/_select2-forms.cshtml")
        </div>

        @* <button type="button" class="btn btn-outline-secondary px-4" data-bs-dismiss="modal" tabindex="-1">Close</button> *@
        <button type="submit" class="btn btn-primary px-4 fw-bold">Send Message</button>
    </div>
</form>



